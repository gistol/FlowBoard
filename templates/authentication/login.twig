{% extends 'base.html.twig' %}

{% block title %}
    Login | Flowboard
{% endblock %}

{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('css/pages/authentication.css') }}" />

{% endblock %}

{% block body %}

    <div class="bootstrap-wrapper">

        <div class="container">

            <div class="row">

                <div class="col-md-12">
                    <img src="{{ asset('img/logo-light.svg') }}" class="authentication-logo" >
                </div>


                <div class="col-md-4 offset-md-4 authentication-container">

                    <h1>Login</h1>

                    <form action="{{ path("login") }}" method="post">

                        <div id="fields" class="fields">

                            {% if error is defined %} {{ error }} {% endif %} <br/>

                            {{ form_label(form.email, null, { 'label_attr': {'class': 'form-placeholder'} }) }}
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}

                            <div class="half">
                                {{ form_label(form.password, null, { 'label_attr': {'class': 'form-placeholder'} }) }}
                                {{ form_widget(form.password, { 'attr': {'class': 'form-control' } }) }}
                            </div>

                            {{ form_rest(form) }}

                            <input type="submit" class="btn btn-default button" id="_submit" name="_submit" value="Login">

                        </div>

                    </form>

                </div>

            </div>

        </div>

    </div>

{% endblock %}