{% extends 'base.html.twig' %}

{% block title %}
    Register | Flowboard
{% endblock %}

{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('css/pages/authentication.css') }}" />

{% endblock %}

{% block body %}

    <div class="bootstrap-wrapper">

        <div class="container">

            <div class="row">

                <div class="col-md-12">
                    <img src="{{ asset('img/logo-light.svg') }}" class="authentication-logo" >
                </div>


                <div class="col-md-4 offset-md-4 authentication-container">

                    <h1>Register</h1>

                    <form action="{{ path("register") }}" method="post">

                        <div id="fields" class="fields">


                            {{ form_label(form.email, null, { 'label_attr': {'class': 'form-placeholder'} }) }}
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.email) }}

                            <div class="half">
                                {{ form_label(form.firstname, null, { 'label_attr': {'class': 'form-placeholder'} }) }}
                                {{ form_widget(form.firstname, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.firstname) }}
                            </div>

                            <div class="half half-last">
                                {{ form_label(form.lastname, null, { 'label_attr': {'class': 'form-placeholder'} }) }}
                                {{ form_widget(form.lastname, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.lastname) }}
                            </div>

                            <div class="half">
                                {{ form_label(form.password.first, null, { 'label_attr': {'class': 'form-placeholder'} }) }}
                                {{ form_widget(form.password.first, { 'attr': {'class': 'form-control' } }) }}
                                {{ form_errors(form.password.first) }}
                            </div>

                            <div class="half half-last">
                                {{ form_label(form.password.second, null, { 'label_attr': {'class': 'form-placeholder'} }) }}
                                {{ form_widget(form.password.second, { 'attr': {'class': 'form-control' } }) }}
                                {{ form_errors(form.password.second) }}
                            </div>


                            {{ form_rest(form) }}

                            <input type="submit" class="btn btn-default button" id="_submit" name="_submit" value="Sign-up">

                        </div>

                    </form>

                </div>

            </div>

        </div>

    </div>

{% endblock %}